#!/bin/sh                                                                                                                                                                                                           
                                                                                                                                                                                                                    
# disable blank screen                                                                                                                                                                                              
xset s off                                                                                                                                                                                                          
xset -dpms                                                                                                                                                                                                          
xset s noblank                                                                                                                                                                                                      
                                                                                                                                                                                                                    
# hide mouse cursor when it's not moving                                                                                                                                                                            
unclutter -idle 0.1 &                                                                                                                                                                                               
                                                                                                                                                                                                                    
#init                                                                                                                                                                                                               
cd /home/pi/rocketKiosk/programs/jsScripts                                                                                                                                                                          
sudo node startupInit.js                                                                                                                                                                                            
url=`jq '.deviceId' /home/pi/rocketKiosk/conf/config.json | tr -d '"'`                                                                                                                                              
echo $url                                                                                                                                                                                                           
                                                                                                                                                                                                                    
                                                                                                                                                                                                                    
                                                                                                                                                                                                                    
# launch browser                                                                                                                                                                                                    
exec chromium-browser --window-size=1360,768 --disable-pinch --kiosk --overscroll-history-navigation=0 --disable-infobars --window-position=0,0 --remote-debugging-port=9222 https://us-central1-totemsystem-5889b.c
loudfunctions.net/homePage/$url                                                                                                                                                                                     
                                                                                                                                                                                                                    
#start deamon kiosk                                                                                                                                                                                                 
cd /home/pi/rocketKiosk/                                                                                                                                                                                            
sudo bash launchSystem.sh                                                                                                                                                                                           